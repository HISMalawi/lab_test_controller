var tt_cancel_destination = "/user/index"
</script>

<%= form_tag("/patient/search_patient", id: "search-form", method: 'post', enctype: 'multipart/form-data') do %>
  <%= text_field(:name, 'given_name', {:field_type => 'alpha',
    :helpText => 'First name',
    :ajaxURL => '/people/given_names?search_string=',
    :allowFreeText => true })%>
  <%= text_field(:name, 'family_name', {:field_type => 'alpha',
    :helpText => 'Last name',
    :ajaxURL => '/people/family_names?search_string=',
    :allowFreeText => true })%>
  <%= select_tag(:gender, options_for_select({"" => "", "Male" => "M", "Female" => "F"}), {:helpText => "Gender"})%>

  <%= hidden_field_tag :search_option, 'by_name' %>
<% end %>
