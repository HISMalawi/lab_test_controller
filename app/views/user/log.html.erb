
<%  config = YAML.load_file("#{Rails.root}/config/app_getway.yml") %>

<% portal_ip = "#{config['protocol']}://#{config['host']}:#{config['port']}" 

%>
<%= form_tag("/user/authenticate", id: "login_form", method: 'get', enctype: 'multipart/form-data') do %>


	<%= text_field(:user, :username, :helpText=> "Enter Username", 
	    :textCase => "lower",
	    :field_type => "password")%><br>

	<%= password_field(:user, :password, :helpText => "Enter Password", 
		:textCase => "lower",
	    :field_type => "password")%><br>

<%end%>

<script type="text/javascript">
	var tt_cancel_destination = '<%= portal_ip %>';
</script>